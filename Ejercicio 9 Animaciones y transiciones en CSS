/*y el CSS para aplicar será el siguiente*/
.btn-modern {
    background-color: #2196F3;
    border: none;
    color: #FFFFFF;
    padding: 10px 20px;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    font-size: 16px;
    margin: 10px;
    border-radius: 5px;
    transition: all 0.4s ease;
  }
  
  .btn-modern:hover {
    transform: translateY(-5px);
    box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.25);
    background-color: #cfd219;
    color: #000000;
  }
